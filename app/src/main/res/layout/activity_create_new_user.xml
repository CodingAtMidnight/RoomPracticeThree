<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateNewUserActivity">


    <EditText
        android:id="@+id/userFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter User First Name"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/userLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter User Last Name"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/userFirstName"
        app:layout_constraintStart_toStartOf="parent"
       />

    <EditText
        android:id="@+id/userAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter User Age"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/userLastName"
        app:layout_constraintStart_toStartOf="parent"
       />


    <Button
        android:id="@+id/saveNewUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add User"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>